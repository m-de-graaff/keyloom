{
  "$schema": "https://unpkg.com/release-it@19/schema/release-it.json",
  "git": {
    "commitMessage": "chore(@keyloom/server): release v${version}",
    "tagName": "@keyloom/server-v${version}",
    "tagMatch": "@keyloom/server-v*",
    "requireCleanWorkingDir": true,
    "requireBranch": "main"
  },
  "npm": {
    "publish": true,
    "access": "public"
  },
  "hooks": {
    "before:init": "pnpm test",
    "after:bump": "pnpm build"
  }
}

