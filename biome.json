{
  "$schema": "https://biomejs.dev/schemas/2.2.4/schema.json",
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "performance": { "noDelete": "error" },
      "suspicious": {
        "noExplicitAny": "off",
        "noVar": "error",
        "useIterableCallbackReturn": "off"
      },
      "correctness": { "noUnusedVariables": "off" },
      "style": { "useConst": "off", "noNonNullAssertion": "off" },
      "complexity": {
        "noUselessSwitchCase": "off",
        "useOptionalChain": "off",
        "noStaticOnlyClass": "off"
      }
    }
  },
  "assist": { "actions": { "source": { "organizeImports": "on" } } },
  "javascript": {
    "formatter": { "quoteStyle": "single", "semicolons": "asNeeded" }
  },
  "files": {
    "includes": [
      "**",
      "!**/node_modules",
      "!**/.next",
      "!**/dist",
      "!**/build",
      "!**/build",
      "!coverage",
      "!.git",
      "!**/build",
      "!*.min.js",
      "!**/build",
      "!*.d.ts",
      "!public",
      "!.cache",
      "!.temp",
      "!out",
      "!.vercel",
      "!.env*",
      "!package-lock.json",
      "!yarn.lock",
      "!pnpm-lock.yaml",
      "!**/.turbo"
    ]
  }
}
