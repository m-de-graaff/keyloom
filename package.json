{
  "name": "keyloom",
  "private": true,
  "packageManager": "pnpm@10.16.1",
  "engines": {
    "node": ">=18.17.0"
  },
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel --filter=@keyloom-example/*",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test",
    "lint": "biome check --reporter=summary .",
    "format": "biome format --write .",
    "format-and-lint:fix": "biome check . --write --unsafe",
    "db:generate": "prisma generate --schema=examples/playground/prisma/schema.prisma",
    "db:migrate": "prisma migrate dev --schema=examples/playground/prisma/schema.prisma",
    "db:push": "prisma db push --schema=examples/playground/prisma/schema.prisma",
    "db:studio": "prisma studio --schema=examples/playground/prisma/schema.prisma",
    "changeset": "changeset",
    "release": "changeset version && pnpm i -w && turbo run build && changeset publish",
    "clean": "git clean -xdf -e node_modules -e .pnpm-store",
    "bump-deps": "npx npm-check-updates --deep -u -x react-day-picker && pnpm install",

    "releaseit:core": "pnpm -C packages/core exec release-it",
    "releaseit:nextjs": "pnpm -C packages/nextjs exec release-it",
    "releaseit:providers": "pnpm -C packages/providers exec release-it",
    "releaseit:adapters": "pnpm -C packages/adapters exec release-it",
    "releaseit:all": "pnpm run releaseit:core && pnpm run releaseit:nextjs && pnpm run releaseit:providers && pnpm run releaseit:adapters"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.4",
    "@changesets/cli": "^2.29.7",
    "@types/node": "^24.5.0",
    "turbo": "^2.5.6",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}
