{
  "name": "keyloom",
  "private": true,
  "packageManager": "pnpm@10.16.1",
  "engines": {
    "node": "22.x"
  },
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "typecheck": "turbo run typecheck",
    "test": "vitest run --coverage",
    "lint": "biome check --reporter=summary .",
    "lint:fix": "biome check --write --unsafe .",
    "eslint": "eslint --no-error-on-unmatched-pattern \"packages/**/{src,tests}/**/*.{ts,tsx,js,cjs,mjs}\" \"scripts/**/*.{js,cjs,mjs}\"",
    "format": "biome format --write .",
    "format-and-lint:fix": "biome check . --write --unsafe",
    "changeset": "changeset",
    "release": "changeset version && pnpm install --recursive && turbo run build && changeset publish",
    "clean": "node ./scripts/clean.mjs",
    "bump-deps": "npx npm-check-updates --deep -u -x react-day-picker && pnpm install",
    "releaseit:core": "pnpm -C packages/core exec release-it",
    "releaseit:nextjs": "pnpm -C packages/nextjs exec release-it",
    "releaseit:providers": "pnpm -C packages/providers exec release-it",
    "releaseit:adapters": "pnpm -C packages/adapters exec release-it",
    "releaseit:cli": "pnpm -C packages/cli exec release-it",
    "releaseit:ui": "pnpm -C packages/ui exec release-it",
    "releaseit:server": "pnpm -C packages/server exec release-it",
    "releaseit:react": "pnpm -C packages/react exec release-it",
    "releaseit:stripe": "pnpm -C packages/stripe exec release-it",
    "releaseit:all": "pnpm run releaseit:core && pnpm run releaseit:nextjs && pnpm run releaseit:providers && pnpm run releaseit:adapters && pnpm run releaseit:cli && pnpm run releaseit:ui && pnpm run releaseit:server && pnpm run releaseit:react && pnpm run releaseit:stripe"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.4",
    "@changesets/cli": "^2.29.7",
    "@types/node": "^24.5.0",
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "@typescript-eslint/parser": "^8.44.0",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.35.0",
    "eslint-import-resolver-node": "^0.3.9",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "release-it": "^19.0.4",
    "turbo": "^2.5.6",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}
